//Syntax of pointer
#include<iostream>
#include<cmath>
using namespace std;
int main()
{
    int x=10;
    int *ptr = &x;
    cout<<*ptr<<"  ";//O\P-->10
    cout<<ptr<<"/n";//O\P--> 0x6ffe14
    x = x +30;
    cout<<*ptr<<" ";//O\P-->40
    cout<<ptr<<"/n";//O\P--> 0x6ffe14-->address remains same
    *ptr=*ptr+40;
    cout<<x<<" ";//O\P-->80
    return 0;
}
